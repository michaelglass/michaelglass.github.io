---
layout: default
---
.home
  %h1 Posts
  %ul.posts
    {% for post in site.posts %}
    %li
      %span.post-date {{ post.date | date: "%b %-d, %Y" }}
      %a.post-link{:href => "{{ post.url }}"} {{ post.title }}
    {% endfor %}
  %p.rss-subscribe
    subscribe
    %a{:href => "/feed.xml"} via RSS
