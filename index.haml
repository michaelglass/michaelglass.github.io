---
layout: default
---
.home
  %ul.posts
    {% for post in site.posts %}
    %li
      .post
        %header.post-header
          %h1
            %a.post-link{:href => "{{ post.url }}"} {{ post.title }}
          %p.meta {{ post.date | date: "%b %-d, %Y" }}{% if post.author %} • {{ post.author }}{% endif %}{% if post.meta %} • {{ post.meta }}{% endif %}
        %article.post-content
          {{ post.content }}
    {% endfor %}
  %p.rss-subscribe
    subscribe
    %a{:href => "/feed.xml"} via RSS
